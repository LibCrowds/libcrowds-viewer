{
  "name": "libcrowds-viewer",
  "description": "IIIF-compatible image viewer component.",
  "version": "1.0.0",
  "author": "Alex Mendes <alexanderhmendes@gmail.com>",
  "private": true,
  "scripts": {
    "copy:openseadragon": "cp -R node_modules/openseadragon/build/openseadragon/images ./src/assets/",
    "copy:openseadragonselection": "cp -R node_modules/openseadragonselection/images ./src/assets/",
    "postinstall": "npm run copy:openseadragon && npm run copy:openseadragonselection",
    "dev": "cross-env NODE_ENV=development webpack-dev-server demo/ --config=demo/webpack.config.js --hot",
    "lint": "eslint --ext .js,.vue src demo",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "clean": "rimraf dist",
    "deploy-demo": "npm run clean && npm run build && gh-pages -d demo"
  },
  "dependencies": {
    "openseadragon": "^2.2.1",
    "openseadragonselection": "github:picturae/openseadragonselection",
    "vue": "^2.3.4"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^3.2.4",
    "css-loader": "^0.25.0",
    "eslint": "^4.1.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-html": "^3.0.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "file-loader": "^0.9.0",
    "gh-pages": "^1.0.0",
    "node-sass": "^4.5.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^5.0.1",
    "vue-loader": "^12.2.1",
    "vue-template-compiler": "^2.3.4",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.5.0"
  }
}
